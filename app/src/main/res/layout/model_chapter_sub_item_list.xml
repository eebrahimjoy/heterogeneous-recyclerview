<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large_extra"
        android:layout_marginRight="@dimen/margin_large_extra"
        android:layout_marginEnd="@dimen/margin_large_extra"
        android:layout_marginStart="@dimen/margin_large_extra"
        android:paddingEnd="@dimen/padding_extra"
        android:paddingRight="@dimen/padding_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingStart="@dimen/padding_large">

        <TextView
            android:id="@+id/subChapterNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/padding_small"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subChapterNameTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_separator_height"
            android:background="@color/colorAccent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>